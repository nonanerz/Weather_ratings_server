<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Email</title>
    <style>
        header {
            padding: 30px 0;
            background-color: #0effc2;
            color: #ffffff;
            text-align: center;
            margin-bottom: 10px;
        }
        .from {
            font-size: 22px;
            color: #000;
        }
        .comment {
            font-size: 18px;
            color: #000;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="email-container">
        <header>
            <h2>Contact Us</h2>
        </header>
        <p class="from"><span>From: </span><%= name %>, <%= email %></p>
        <p class="comment"><%= comment %></p>
    </div>
</div>
</body>
</html>
